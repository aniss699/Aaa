# Sourcing web gratuit
DOMAIN_WHITELIST="*.gouv.fr,*.insee.fr,*.cci.fr,*.pagesjaunes.fr"
RATE_LIMIT_PER_DOMAIN_RPS=1
USER_AGENT="TestMarketplaceBot/0.1 (+contact@exemple.fr)"

# ML local
EMBEDDINGS_ENABLED=false
BM25_ENABLED=true

# AI Enhancement Features (ACTIVÉES pour expérience full stack)
ENABLE_VISION_TO_BRIEF=true
ENABLE_AUDIO_BRIEF=true
ENABLE_PDF_OCR=true
ENABLE_NORMALIZE=true
ENABLE_GENERATOR=true
ENABLE_QUESTIONER=true
ENABLE_PRICER=true
ENABLE_LOCAL_ELASTICITY=true
ENABLE_GUARANTEED_PRICE=true
ENABLE_HYBRID_SEARCH=true
ENABLE_RANKER_EXPLAIN=true
ENABLE_ROUTER=true
ENABLE_CONCIERGE=true
ENABLE_BADGES=true
ENABLE_METRICS=true

# Flags pour les fonctions IA avancées
ENABLE_AI_ASSISTANT=true
ENABLE_SMART_RECOMMENDATIONS=true
ENABLE_AI_DASHBOARD=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_SUCCESS_PREDICTION=true

# Nouvelles fonctionnalités IA avancées
