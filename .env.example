# Configuration générale
NODE_ENV=development
PORT=5000

# Mode ÉCO - Pas d'APIs payantes
OFFLINE_MODE=false
FEATURE_SOURCING=true
FEATURE_API_CONNECTORS=false
FEATURE_CRAWLER=true

# Sourcing web gratuit
DOMAIN_WHITELIST="*.gouv.fr,*.insee.fr,*.cci.fr,*.pagesjaunes.fr"
RATE_LIMIT_PER_DOMAIN_RPS=1
USER_AGENT="TestMarketplaceBot/0.1 (+contact@exemple.fr)"

# ML local
EMBEDDINGS_ENABLED=false
BM25_ENABLED=true

# AI Enhancement Features (OFF par défaut)
ENABLE_VISION_TO_BRIEF=false
ENABLE_AUDIO_BRIEF=false
ENABLE_PDF_OCR=false
ENABLE_NORMALIZE=true
ENABLE_GENERATOR=true
ENABLE_QUESTIONER=true
ENABLE_PRICER=true
ENABLE_LOCAL_ELASTICITY=false
ENABLE_GUARANTEED_PRICE=false
ENABLE_HYBRID_SEARCH=false
ENABLE_RANKER_EXPLAIN=false
ENABLE_ROUTER=false
ENABLE_CONCIERGE=false
ENABLE_BADGES=false
ENABLE_METRICS=true

# Base de données
DATABASE_URL="postgresql://user:password@localhost:5432/appelspro"
REDIS_URL="redis://localhost:6379"

